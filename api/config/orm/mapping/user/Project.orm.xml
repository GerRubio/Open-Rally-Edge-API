<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\Entity\Project" table="user_project">
        <id name="id" type="string" length="36"/>

        <field name="name" length="100"/>
        <field name="description" length="100"/>
        <field name="link" type="text"/>
        <field name="createdAt" type="datetime"/>
        <field name="updatedAt" type="datetime"/>

        <many-to-one field="owner" target-entity="App\Entity\User"/>
        <many-to-many field="users" target-entity="App\Entity\User" mapped-by="projects"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="markAsUpdated"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
